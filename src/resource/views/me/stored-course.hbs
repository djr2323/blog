<div class="mt-4">
    <h1>Khoa hoc cua toi</h1>
    
        <table class="table">
      <thead>
        <tr>
          <th scope="col">#</th>
          <th scope="col">name</th>
          <th scope="col">description</th>
          <th scope="col">thời gian tạo</th>
          <th></th>
        </tr>
      </thead>
      <tbody>{{#each courses}}
        <tr>
          <th scope="row">{{inc @index}}</th>
          <td>{{this.name}}</td>
          <td>{{this.description}}</td>
          <td>{{this.createdAt}}</td>
          <td><a class="btn btn-primary" href="/courses/{{this._id}}/edit">Sửa</a></td>
        </tr>{{/each}}
      </tbody>
    </table>
    
</div>